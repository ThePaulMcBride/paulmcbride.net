<ul class='c-share o-plain-list'>
  <li class='c-share__item'>
    <a class='c-share__link'
       title='Share on Twitter'
       href='https://twitter.com/share?text={{ post.title }}&amp;url={{ post.url }}'
       onclick="window.open(this.href, 'twitter-share', 'width=550, height=235');return false;">
      <div data-icon='ei-sc-twitter' data-size='s' class='c-share__icon'></div>
    </a>
  </li>

  <li class='c-share__item'>
    <a class='c-share__link'
       title='Share on Facebook'
       href='https://www.facebook.com/sharer/sharer.php?u={{ post.url }}'
       onclick="window.open(this.href, 'facebook-share','width=580, height=296');return false;">
      <div data-icon='ei-sc-facebook' data-size='s' class='c-share__icon'></div>
    </a>
  </li>

  <li class='c-share__item'>
    <a class='c-share__link'
       title='Share on Google+'
       href='https://plus.google.com/share?url={{ post.url }}'
       onclick="window.open(this.href, 'google-share','width=580, height=296');return false;">
      <div data-icon='ei-sc-google-plus' data-size='s' class='c-share__icon'></div>
    </a>
  </li>

  <li class='c-share__item'>
    <a class='c-share__link'
       title='Share on Pinterest'
       href='http://pinterest.com/pin/create/button/?url={{ post.url }}&description={{ post.title }}'
       onclick="window.open(this.href, 'google-share','width=580, height=296');return false;">
      <div data-icon='ei-sc-pinterest' data-size='s' class='c-share__icon'></div>
    </a>
  </li>
</ul>
