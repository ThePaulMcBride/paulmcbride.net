<div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l c-post-card-wrap js-post-card-wrap {% if is_home and key == 0 %} c-post-card-wrap--first {% endif %} {% if (is_home) and ((key == 1) or (key == 2))%} o-grid__col--2-4-m o-grid__col--2-4-l {% endif %}'>
  <div class='c-post-card {% if is_home and key == 0 %} c-post-card--first {% endif %}'>

    <a href='{{ post.link }}' class='js-fadein c-post-card__image'>
      <div class='c-post-card__image__sharp' data-image="{{ post.thumbnail.src }}"></div>
      <div class='c-post-card__image__small' style='background-image: url({{ post.thumbnail.src|resize(100) }})'></div>
      {# {% if post.featured %}
      <span title='Featured Post'>
        <span class='c-post-card--featured__icon' data-icon='ei-star' data-size='s'></span>
      </span>
      {% endif %} #}
    </a>

    <div class='c-post-card__meta'>
      <a class='c-post-card__author' href='{{ post.author.link }}' title='{{ post.author.name }}'>{{ post.author.name }} - </a>

      <div class='c-post-card__date'>
        <time datetime='{{ post.post_date|date('Y-m-d') }}' title='{{ post.post_date|date('dS M Y') }}'>{{ post.post_date|date('dS M Y') }}</time>
      </div>

      <h3 class='c-post-card__title'>
        <a href='{{ post.link }}' class='c-post-card__link'>{{ post.title }}</a>
      </h3>
    </div>

  </div>
</div>
