<footer class='c-footer'>
  <div class='o-grid'>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--1-3-m o-grid__col--1-3-l o-grid__col--2-4-m o-grid__col--1-4-l'>
      <a href='{{ site.url }}' class='u-block u-font-regular'>{{ site.title }}</a>
    </div>

    <nav class='o-grid__col o-grid__col--4-4-s o-grid__col--1-3-m o-grid__col--1-3-l o-grid__col--2-4-m o-grid__col--1-4-l'>
      <ul class="c-footer-list o-plain-list">
        {% for item in footer_menu.get_items %}
          <li class="c-nav__item">
            <a href="{{item.get_path}}" class="c-nav__link ">{{item.title}}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--1-3-m o-grid__col--1-3-l o-grid__col--2-4-m o-grid__col--1-4-l'>
      <ul class='c-footer-list o-plain-list'>
        <li>
          <a href='https://twitter.com/thepaulmcbride' target='_blank'>
            <span data-icon='ei-sc-twitter' data-size='s'></span>
            Twitter
          </a>
        </li>
        <li>
          <a href='https://facebook.com/thepaulmcbride' target='_blank'>
            <span data-icon='ei-sc-facebook' data-size='s'></span>
            Facebook
          </a>
        </li>
        <li>
          <a href='https://instagram.com/thepaulmcbride' target='_blank'>
            <span data-icon='ei-sc-instagram' data-size='s'></span>
            Instagram
          </a>
        </li>
        <li>
          <a href='https://github.com/thepaulmcbride' target='_blank' class='block'>
            <span data-icon='ei-sc-github' data-size='s'></span>
            Github
          </a>
        </li>
      </ul>
    </div>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-4-l'>
      <p class='u-font-medium'>Newsletter</p>
      <form action="https://app.getresponse.com/add_subscriber.html" accept-charset="utf-8" method="post" class="c-subscribe-form">
      	<input class="c-subscribe-form__input" type="text" placeholder="Name" name="name"/><br/>
      	<input class="c-subscribe-form__input" type="text" placeholder="Email Address" name="email"/><br/>
      	<input type="hidden" name="campaign_token" value="TsOkh" />
        <input type="hidden" name="thankyou_url" value="https://paulmcbride.net/thank-you"/>
      	<button class="c-subscribe-form__btn c-btn c-btn--full c-btn--small" type="submit">Subscribe</button>
      </form>
    </div>

    <div class='o-grid__col o-grid__col--full'>
      <div class='c-footer__copy'>
        <span class='u-font-small u-text-center u-block'>&copy; {{"now"|date('Y')}} {{ site.title }}</span>
      </div>
    </div>

  </div>
</footer>
